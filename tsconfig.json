{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "esnext",
    "noEmit": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "declaration": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
